{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "es2015", "es2016", "es2017"],
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./public/js",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": [
    "resources/js/**/*",
    "node_modules/@types/jquery/JQuery.d.ts",
    "node_modules/@types/jquery/JQuery.d.ts"
  ],
  "exclude": [
    "node_modules",
    "public"
  ]
}