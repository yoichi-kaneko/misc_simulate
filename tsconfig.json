{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "es2015", "es2016", "es2017"],
    "allowJs": true,
    "sourceMap": true,
    "jsx": "react-jsx",
    "outDir": "./public/js",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "include": [
    "resources/js/**/*",
    "node_modules/@types/jquery/JQuery.d.ts",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "public"
  ]
}
